page {
  background: #eee;
}

.reviews-wrap {
  background: #fff;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.productImg {
  width: 130rpx;
  height: 130rpx;
  margin-right: 30rpx;
}

.reviewText {
  width: 530rpx;
  height: 120rpx;
  box-sizing: border-box;
  border: 1rpx solid #f4f4f4;
  padding: 20rpx;
}

.reviewImage-wrap {
  width: 100%;
  overflow: hidden;
  margin:160rpx auto 20rpx;
}

.imageWrap {
  width: 180rpx;
  height: 180rpx;
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
 
}

.imageWrap image {
  margin:10rpx auto;
  width: 160rpx;
  height: 160rpx;
   border: 1rpx solid #f4f4f4;
  box-sizing: border-box;
}

.imageWrap .clearBtn {
  display:flex;
  position: absolute;
  right: 0;
  top:0rpx;
  width:40rpx;
  height:40rpx;
  background: url('https://cache.jiangxinxiaozhen.com/WD/shop/little/closeImg.png') no-repeat center center;
  background-size:40rpx;
 
}

.star-wrap {
  padding:20rpx 0;
  height: 60rpx;
  border-top: 1rpx solid #f4f4f4;
}

.star-wrap image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.submitBtn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #eb5902;
  color: #fff;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.checkdeWrap {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  left: 0;
}

.cameraBtn {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.cameraBtn button {
  width: 100%;
  margin: 20rpx 0;
}

.chooseImgBtn {
  margin-top:10rpx;
  width: 160rpx;
  height: 160rpx;
  background: url(https://cache.jiangxinxiaozhen.com/WD/APP/little/chooseImg.png) no-repeat center center;
  background-size: 100%;
}
